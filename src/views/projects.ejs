<h1 class="mt-5 mb-4 header">Projects</h1>
<table class="table table-dark">
    <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Author</th>
                    <th scope="col">Date</th>
                    <th scope="col">Actions</th>
                </tr>
    </thead>
    <tbody>
    <% projects.forEach(project=>{ %>
        <tr>
            <th><%= project.id %></th>
            <td><%= project.name %></td>
            <td><%= project.desc %> </td>
            <td><%= project.author%></td>
            <td><%= project.date%></td>   
            <td>
             <a href="/update-project/<%= project.id %>" class ="btn btn-warning"> Update </a>
             <button class="btn btn-danger" onclick="deleteProject('<%= project.id %>')"> Delete</button>
             <!-- <a href="/delete-project/<%= project.id %>" class ="btn btn-danger">  Delete </a>  -->
             <a href="/issue/<%= project.id %>" class="btn btn-info">Track Issues</a>
             <a href="/add-issue/<%=project.id %>" class="btn btn-success">Create Issues</a>
            </td>              
        </tr>
    <% }) %>           
    </tbody>
</table>
