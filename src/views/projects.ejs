<h1 class="mt-5 mb-4 header">Projects</h1>
<div class="card-columns">
    <% projects.forEach(project=>{ %>
        <div class="card" style="width: 70%; color:white;background-color:rgb(39, 38, 41) ; margin-left:auto; margin-right:auto;margin-bottom: 1rem;">
            <div class="card-body d-flex justify-content-between">
                <div style="padding-right: 3rem;">
                    <h5 class="card-title"><strong>ID:</strong> <%= project.id %></h5>
                    <p class="card-text"><strong>Title:</strong> <%= project.name %></p>
                    <p class="card-text"><strong>Description:</strong> <%= project.desc %></p>
                    <p class="card-text"><strong>Author:</strong> <%= project.author %></p>
                    <p class="card-text"><strong>Date:</strong> <%= project.date %></p>
                </div>
                <div class="d-flex flex-column align-items-end">
                    <a href="/update-project/<%= project.id %>" class ="btn btn-warning mb-2" style="width:8rem;color:white"> <strong>Update</strong> </a>
                    <a href="/delete-project/<%= project.id %>" class ="btn btn-danger mb-2" style="width:8rem;color:white"> <strong>Delete</strong> </a>
                    <a href="/issue/<%= project.id %>" class="btn btn-info mb-2 " style="width:8rem;color:white"><strong>Track Issues</strong> </a>
                    <a href="/add-issue/<%=project.id %>" class="btn btn-success"style="width:8rem;color:white"><strong>Create Issues</strong> </a>
                </div>
            </div>
        </div>
    <% }) %>
</div>


