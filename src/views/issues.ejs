<html>
    <head>
       <link rel="stylesheet" href="project_card.css">
       <script src="https://kit.fontawesome.com/6834fc8242.js" crossorigin="anonymous"></script>
       <link rel="stylesheet" href="project.css">
    </head>
   <body>
      <nav> 
         <div class="nav1">
           <i class="fa-solid fa-bug"></i>
           <logo> Issue Tracker </logo>
         </div>
         <button type="submit" class="nav_button">
          <a href="#project_box">Report Issue</a> 
         </button>
    </nav>
    <div id ="project_box">
       <h2 id="form_heading">Information of Issue</h2>
          <form action="" id="project_form">
                <label for="Project_name">Name of the project:</label><br>
                 <input type="text" id="project_name" required><br>
                <label for="Project_description">Description:</label><br>
                 <input type="text" required id="project_desc"><br>
                <label for="Project_author">Author:</label>
                 <input type="text" required><br>
                <label for="Project_description_Date">Date:</label> 
                <input type="date" required>
          </form>
          <div id="box">
              <button type="submit" class="form_button" id="close"><a href="#">Close</a> </button>
              <button type="submit" class="form_button" id="create"><a href="#">Create</a> </button>
          </div>
    </div>
    <%- include('new_issues.ejs') %>
   </body>
</html>