<html>
    <head>
       <script src="https://kit.fontawesome.com/6834fc8242.js" crossorigin="anonymous"></script>
       <link rel="stylesheet" href="issues.css">
    </head>
   <body>
      <nav> 
         <div class="nav1">
           <i class="fa-solid fa-bug"></i>
           <logo> Issue Tracker </logo>
         </div>
         <button type="submit" class="nav_button">
          <a href="#report_box">Report Issue</a> 
         </button>
    </nav>
    <div id ="report_box">
       <h2 id="form_heading">Information of Issue</h2>
          <form action="" id="report_form">
                <label for="Issue_name">Title:</label>
                 <input type="text" id="issue_name" required><br>
                <label for="Issue_description">Description:</label><br>
                 <input type="text" required id="issue_desc"><br>
                 <label for="Issue_tag" id="issue_tag">Label Issue:</label>
                 <select name="Issue_tag" id="issue_tag">
                  <option value="" selected disabled class =option id="dis">Select an issue tag</option>
                  <option value="Bug" class="option" id="bug">Bug</option>
                  <option value="UI"  class="option" id="ui">UI Enhancement</option>
                  <option value="Doc" class="option" id="doc">Documentation</option>
                  <option value="Dup" class="option" id="dup">Duplicate</option>
                 </select><br> 
                 <label for="Issue_author">Reporter:</label>
                 <input type="text" required><br>
          </form>
          <div id="box">
              <button type="submit" class="form_button" id="close"><a href="#">Cancel</a> </button>
              <button type="submit" class="form_button" id="create"><a href="#">Submit Issue</a> </button>
          </div>
    </div>
    <%- include('new_issues.ejs') %>
   </body>
</html>