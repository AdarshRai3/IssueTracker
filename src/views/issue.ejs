<h1 class="mt-5 mb-4 header">Issues</h1>
<div class="card-columns">
    <% issues.forEach(issue=>{ %>
        <div class="card" style="width: 70%; color:white; background-color:rgb(39, 38, 41) ; margin-left:auto; margin-right:auto;margin-bottom: 1rem;">
            <div class="card-body d-flex ">
                <div style="padding-right: 3rem;">
                    <h5 class="card-title"><strong>Issue ID:</strong> <%= issue.issueid %></h5>
                    <p class="card-text"><strong>Name:</strong> <%= issue.name %></p>
                    <p class="card-text"><strong>Description:</strong> <%= issue.description %></p>
                    <p class="card-text"><strong>Severity:</strong> <%= issue.severity %></p>
                    <p class="card-text"><strong>Reporter:</strong> <%= issue.reporter %></p>
                    <p class="card-text"><strong>Assignee:</strong> <%= issue.assignee %></p>
                    <p class="card-text"><strong>Date:</strong> <%= issue.date %></p>
                    <p class="card-text"><strong>Status:</strong> <%= issue.status %></p>
                </div>
                <div class="d-flex flex-column align-items-end">
                    <a href="/update-issue/<%= issue.issueid %>" class ="btn btn-warning mb-2" style="width:8rem;color:white"> <strong>Update</strong> </a>
                    <a href="/delete-issue/<%= issue.issueid %>" class ="btn btn-danger mb-2 w-100" style="width:8rem;color:white"> <strong>Delete</strong> </a>   
                </div>
            </div>
        </div>
    <% }) %>
</div>
